{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": [
      "es5",
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*":  ["./*"]
    }
  }
}
